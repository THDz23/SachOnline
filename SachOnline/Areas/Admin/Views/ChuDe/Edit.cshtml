﻿@model SachOnline.Models.CHUDE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/ckeditor/ckeditor.js"></script>
<h2>ĐIỀU CHỈNH THÔNG TIN CHỦ ĐỀ</h2>

@using (Html.BeginForm("Edit", "ChuDe", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaCD)

        <div class="form-group">
            <label class="control-label col-md-2">Mã chủ đề:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaCD" value="@Model.MaCD" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên chủ đề:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenChuDe" value="@Model.TenChuDe" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu thông tin" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ CHỦ ĐỀ", "Index")
</div>