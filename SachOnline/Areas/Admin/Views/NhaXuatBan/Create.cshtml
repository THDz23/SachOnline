﻿@model SachOnline.Models.NHAXUATBAN

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM NHÀ XUẤT BẢN</h2>

@using (Html.BeginForm("Create", "NhaXuatBan", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên nhà xuất bản: </label>
            <div class="col-md-10">
                <input type="text" size="100" required name="nTenNXB" value="@ViewBag.TenNXB" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ: </label>
            <div class="col-md-10">
                <input type="text" size="100" name="nDiaChi" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Điện thoại: </label>
            <div class="col-md-10">
                <input type="text" size="100" name="nSDT" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ NHÀ XUẤT BẢN", "Index")
</div>